<form class='infoForm' bindsubmit='submitDateMent'>
    <view class='infoDate'>
      <text class='infoHead'>预约信息：</text>
    </view>
    <view class='info'>
      <text class='infoKey'>预约时间：</text>      
      <input class='inputInfo' name='date' value='{{dateMent.workDate}}'></input>
    </view>
    <view class='info'>
      <text class='infoKey'>预约医院：</text>
      <input class='inputInfo' value='{{dateMent.hospital}}'></input>      
    </view>
    <view class='info'>
      <text class='infoKey'>姓     名:  </text>
      <input class='inputInfo' value='{{dateMent.name}}'></input>
    </view>
    <view class='info'>
      <text class='infoKey'>身份证: </text>
      <input class='inputInfo' value='{{dateMent.identification}}'></input>
    </view>
    <view class='info'>
      <text class='infoKey'>手机号:  </text>
      <input class='inputInfo' value='{{dateMent.mobile}}'></input>
    </view>   
    <view class='btn'>
      <button form-type='submit' class='btCancel'>取消</button>
    </view>
  </form>
