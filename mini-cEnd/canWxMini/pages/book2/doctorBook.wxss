.grid {
    position: relative;
    float: left;    
    padding: 0px 10px;
    width: 33.33333333%;
    box-sizing: border-box;
    border:0.5px dashed;
    border-radius: 4PX 4PX 4PX 4PX;
}

.grid:active {
    background-color: #ECECEC;
}  
 
.grid__bg {
    position: relative;
    float: left;    
    padding: 0px 0px;
    width: 100%;
    box-sizing: border-box;
}
 
.grid__icon {
    width: 32px;
    height: 32px;
    margin: 0 auto;
}
 
 
.grid__icon image {
    display: block;
    width: 100%;
    height: 100%;
}
 
.grid__icon + .wgrid__label {
    margin-top: 5px;
}
 
 
.grid__date {
    display: block;
    text-align: center;
    font-weight: bold;
    color: #000;
    font-size: 12px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.grid__sub {
    display: block;
    margin: 1px 2px;
    text-align: center;
    font-weight: bold;
    padding: 3px 0px;
    color: #000;
    font-size: 13px;
    white-space: nowrap;
    text-overflow: ellipsis;
    border-top: 1px;
    overflow: hidden;
    border-bottom: 1px solid #ccc;
}

