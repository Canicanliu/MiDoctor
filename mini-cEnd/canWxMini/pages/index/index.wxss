/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.list-content {
  margin-top: 25rpx;
}

.list-content>view {
  height: 82rpx;
  background: #fff;
  line-height: 82rpx;
  font-size: 30rpx;
  position: relative;
}

.list-content>view>view:nth-child(2){
   display: inline-block;
   margin-left: 30rpx;
}

.list-content>view>view:last-child{
  float: right;
  width: 25rpx;
  margin-right: 20rpx;
}
.list-content>view>view:first-child{
  float: left;
  /*width: 45rpx;*/
  margin-left: 30rpx;
}

.list-content>view+view {
  border-top: 1rpx solid #d1d9e0;
}

.icon{
  padding-top: 15rpx;
  width: 52rpx;
  height: 52rpx;
}

.icon image{
  width: 100%;
  height: 100%;
}
.arrow{
  transform:scale(1,2);
  position: absolute;
  right: 10rpx;
  top: -2rpx;
  color: #999;
}
.usermotto {
  margin-top: 200px;
}